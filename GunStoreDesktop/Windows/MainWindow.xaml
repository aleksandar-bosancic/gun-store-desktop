<Window x:Class="GunStoreDesktop.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Style="{DynamicResource MaterialDesignWindow}">
    <GroupBox Header="Change theme">
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition/>
                <RowDefinition/>
            </Grid.RowDefinitions>
            <Button Click="DarkButtonOnClick" Height="50" Margin="5" Content="Dark"/>
            <Button Grid.Row="0" Click="LightButtonOnClick" Height="50" Margin="5"  Content="Light" Grid.Column="1"/>
            <Button Grid.Row="1" Grid.Column="0" Height="50" Margin="5" Content="Blue" Click="GreenButtonOnClick"/>
            <Button Grid.Column="1" Grid.Row="1" Height="50" Margin="5" Content="Yellow" Click="YellowButtonOnClick"></Button>
        </Grid>
    </GroupBox>


</Window>